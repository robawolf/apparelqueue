{
  "name": "product-idea-queue",
  "description": "Multi-stage product idea approval queue with headless Shopify storefront",
  "private": true,
  "workspaces": [
    "frontend",
    "storefront"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel --print-label dev:queue dev:storefront",
    "dev:queue": "npm run dev --workspace=frontend",
    "dev:storefront": "npm run dev --workspace=storefront",
    "format": "prettier --cache --write .",
    "lint": "npm run lint --workspace=frontend",
    "type-check": "npm run type-check --workspaces"
  },
  "devDependencies": {
    "npm-run-all2": "^5.0.2",
    "prettier": "^3.8.1"
  }
}